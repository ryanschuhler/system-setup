[user]
	name = ryanschuhler
	email = ryan.schuhler@liferay.com
[core]
    editor = vim
	autocrlf = input
	excludesfile = /Users/ryan/.gitignore_global
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	aliases = "!git config -l | grep alias | cut -c 7-"
	br = branch
	brD = branch -D
	ci = commit
	cia = commit --amend
	co = checkout
	cob = checkout -b
	cl = clone
	cp = cherry-pick
    dc = diff --cached
    files = !git diff --name-only $(git merge-base HEAD \"$REVIEW_BASE\")
	log = log --decorate --graph --date=short
	l = log
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	re = remote
    rea = remote add
    r = review
    review = !vim -p $(git files) +\"tabdo Gdiff $REVIEW_BASE\" +\"let g:gitgutter_diff_base = '$REVIEW_BASE'\"
    reviewone = !vim -p +\"tabdo Gdiff $REVIEW_BASE\" +\"let g:gitgutter_diff_base = '$REVIEW_BASE'\"
	ri = rebase -i
	rih = rebase -i HEAD~10
	rh =  reset --hard
	sa = stash apply
	sl = stash list
	ss = stash save
	slog = log --pretty=oneline --abbrev-commit
    st = status
    stat = !git --no-pager diff --stat $(git merge-base HEAD \"$REVIEW_BASE\")
    po = push origin
    pom = push origin master
    pu= push upstream
    pum = push upstream master
    pr = pull --rebase
	pru = pull --rebase upstream
    prum = pull --rebase upstream master
